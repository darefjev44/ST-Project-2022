@{
	ViewData["Title"] = "Transfer";
}

<section class="text-center">
    <div class="container ps-5 pe-5">
        <h3>Your User ID is:</h3>
        <h2 class="d-flex align-items-center justify-content-center">
            9999999
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
                <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z" />
                <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z" />
            </svg>
        </h2>
        <p class="text-muted">Other users may send you funds using your User ID.</p>
    </div>
</section>
<section class="text-center">
    <div class="container ps-4 pe-4">
        <form>
            <div class="mb-3">
                <label class="form-label text-center" for="recipientid">Recipient's User ID</label>
                <input class="form-control" type="number" id="recipientid" />
            </div>
            <div class="mb-3">
                <label class="form-label text-center" for="amount">Transfer Amount</label>
                <input class="form-control" type="number" id="amount" />
            </div>
            <div class="mb-3">
                <button asp-controller="Home"
                        asp-action="Index"
                        class="btn btn-primary" type="submit">
                    Transfer Funds
                </button>
            </div>
        </form>
    </div>
</section>