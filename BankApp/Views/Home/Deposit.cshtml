@{
	ViewData["Title"] = "Deposit";
}

<section class="text-center">
    <div class="container ps-5 pe-5">
        <h3>Current Balance</h3>
        <h2>€00.00</h2>
    </div>
</section>
<section class="text-center">
    <div class="container ps-4 pe-4">
        <form>
            <div class="mb-3">
                <label class="form-label text-center" for="amount">Deposit Amount</label>
                <input class="form-control" type="text" id="amount" />
            </div>
            <div class="mb-3">
                <button asp-controller="Home"
                        asp-action="Index"
                        class="btn btn-primary w-50" type="submit">
                    Deposit
                </button>
            </div>
        </form>
    </div>
</section>