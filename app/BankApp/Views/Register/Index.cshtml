@{
	ViewData["Title"] = "Register";
    ViewData["NavLink"] = "Login";
	ViewData["NavText"] = "Sign In";
    Layout = "/Views/Shared/_MinLayout.cshtml";
}

@model RegisterViewModel

<section class="text-center">
    <div class="container ps-5 pe-5">
        <p class="text-muted">Register an Account</p>
    </div>
</section>
<section class="text-center">
    <div class="container ps-4 pe-4">
        <form method="post">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label text-center">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label text-center">Surname</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address1" class="form-label text-center">Address</label>
                <input asp-for="Address1" class="form-control" />
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address2" class="form-label text-center">Address 2</label>
                <input asp-for="Address2" class="form-control" />
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="City" class="form-label text-center">Town/City</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="County" class="form-label text-center">County</label>
                <input asp-for="County" class="form-control" />
                <span asp-validation-for="County" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Eircode" class="form-label text-center">Eircode</label>
                <input asp-for="Eircode" class="form-control" />
                <span asp-validation-for="Eircode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label text-center">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label text-center">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary w-50" type="submit" value="Register">
            </div>
        </form>
    </div>
</section>

@*Registration success prompt via Bootstrap Modals*@
@if (TempData["prompt-title"] != null)
{
    <div class="modal" id="register-modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@TempData["prompt-title"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    @Html.Raw(TempData["prompt-body"])
                </div>
                <div class="modal-footer justify-content-center">
                    <a type="button" class="btn btn-primary" asp-controller="Login" asp-action="Index">Sign In</a>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#register-modal").modal('show');
        });
    </script>
}

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    }
}
